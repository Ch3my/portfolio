    @keyframes MoveUpDown {
        0% {
            transform: none;
        }
        25% {
            transform: translateY(-50px) translateX(20px) rotate(5deg);
        }
        50% {
            transform: translateY(25px) translateX(-25px) rotate(-5deg);
        }
        75% {
            transform: translateY(-50px) translateX(25px) rotate(-5deg);
        }
        100% {
            transform: translateY(0px) translateX(0px) rotate(0deg);
        }
    }

    @keyframes moveBubblesX {
        0% {
            left: -1%;
        }
        100% {
            left: 101%;
        }
    }

    @keyframes moveBubblesY {
        0% {
            margin-top: 0px;
        }
        100% {
            margin-top: 150px;
        }
    }

    @keyframes moveBubblesYOpposite {
        0% {
            margin-top: 0px;
        }
        100% {
